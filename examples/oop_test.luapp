-- OOP Test Suite

print("=== Testing Classes ===")

class Point
    function init(x, y)
        self.x = x
        self.y = y
    end

    function toString()
        return "(" .. tostring(self.x) .. ", " .. tostring(self.y) .. ")"
    end

    function add(other)
        return new Point(self.x + other.x, self.y + other.y)
    end
end

local p1 = new Point(3, 4)
local p2 = new Point(1, 2)
print("p1 = " .. p1:toString())
print("p2 = " .. p2:toString())

local p3 = p1:add(p2)
print("p1 + p2 = " .. p3:toString())

print("")
print("=== Testing Inheritance ===")

class Shape
    function init(name)
        self.name = name
    end

    function describe()
        print("I am a " .. self.name)
    end
end

class Circle extends Shape
    function init(radius)
        super.init("circle")
        self.radius = radius
    end

    function area()
        return 3.14159 * self.radius * self.radius
    end
end

local c = new Circle(5)
c:describe()
print("Area: " .. tostring(c:area()))

print("")
print("=== All tests passed! ===")
